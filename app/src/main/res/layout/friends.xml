<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/_5mdp"
    android:layout_marginTop="@dimen/_5mdp"
    android:layout_marginBottom="@dimen/_5mdp"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/md_theme_dark_onSecondary"

        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/friendphoto"
            android:layout_width="@dimen/_115mdp"
            android:layout_height="@dimen/_130mdp"


            android:alpha="0.8"
            android:outlineAmbientShadowColor="#201a1b"
            android:scaleType="centerCrop"
            android:src="@drawable/einsten"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_border_color="@color/md_theme_dark_secondary"
            app:riv_border_width="@dimen/_3mdp"

            app:riv_corner_radius="@dimen/_16mdp" />

        <TextView
            android:id="@+id/friendename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Vivek Penuli"

            android:textColor="@color/md_theme_light_errorContainer"
            android:textSize="@dimen/_18mdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="@+id/friendphoto" />    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>