<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/Friendphoto"
        android:layout_width="@dimen/_90mdp"
        android:layout_height="@dimen/_140mdp"


        android:layout_marginEnd="6dp"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:src="@drawable/einsten"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#201a1b"
        app:riv_corner_radius="@dimen/_12mdp"
        app:riv_mutate_background="true"
        app:riv_oval="false" />
    <View
        android:id="@+id/view13"
        android:layout_width="@dimen/_40mdp"
        android:layout_height="@dimen/_40mdp"
        android:background="@drawable/circle_story"
        app:layout_constraintBottom_toBottomOf="@+id/commentprofile"
        app:layout_constraintEnd_toEndOf="@+id/commentprofile"
        app:layout_constraintStart_toStartOf="@+id/commentprofile"
        app:layout_constraintTop_toTopOf="@+id/commentprofile" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commentprofile"
        android:layout_width="@dimen/_36mdp"
        android:layout_height="@dimen/_46mdp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/download"
        app:civ_border_color="#FF000000"

        app:civ_border_width="@dimen/_1mdp"
        app:layout_constraintStart_toStartOf="@+id/Friendphoto"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginBottom="6dp"

        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="@dimen/_6mdp"

        app:cardElevation="@dimen/_8mdp"
        app:layout_constraintBottom_toBottomOf="@+id/Friendphoto"
        app:layout_constraintEnd_toEndOf="@+id/Friendphoto"
        app:layout_constraintStart_toStartOf="@+id/Friendphoto">

        <TextView
            android:id="@+id/storyname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="vivek penuli"
            android:textColor="#EAE4E6"
            android:textSize="@dimen/_13mdp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>